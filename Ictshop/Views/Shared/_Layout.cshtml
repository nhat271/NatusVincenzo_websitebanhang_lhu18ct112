<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NATUSVINCENZO</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    @using Ictshop.Models

    <style type="text/css">
        body {
            background-color: white;
        }

        .navbar-inverse {
            background-color: slategray;
            border-color: rebeccapurple;
        }

        .top_header {
            background-color: black;
            padding-left: 110px;
            color: white;
        }

        .form-inline {
            float: right;
            padding-top: 10px;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: x-large;
        }

        .navbar-inverse .navbar-brand {
            color: white;
        }

        .navbar-inverse .navbar-nav > li > a {
            color: white;
            font-size: large;
        }

            .navbar-inverse .navbar-nav > li > a:hover {
                color: black;
            }

        .navbar-brand {
            color: cadetblue;
        }


        .bg-danger {
            border-radius: 5px;
            background-color: white;
            color: red;
            font-size: 50px;
        }

        .row {
            background-color: white;
        }

        .giohang {
            color: white;
            font-size:16px;
            padding-left:340px;
        }

        .bg-success {
            background-color: white;
            border-radius: 7px;
            padding-left: 10px;
        }

        .btn,
        .btn:link,
        .btn:visited {
            text-transform: uppercase;
            text-decoration: none;
            display: inline-block;
            border-radius: 20px;
            font-size: 16px;
            color:black;
        }

            .btn:hover {
                background-color: #E0E0E0;
                color: black;
                box-shadow: 0 0.5rem 1rem gray;
                transform: scale(1.1);
                transition: .5s;
                font-size: 16px;
            }

        .ani {
            border-radius: 10px;
            z-index: 10;
            transition: .5s;
        }

            .ani:hover {
                transform: scale(1.1);
                box-shadow: 0 1rem 2rem white;
            }
    .logo{
        padding-left:-50px;
    }
    </style>



</head>

<body>

    @{ 
         var u = Session["use"] as Ictshop.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div  class="top_header col-md-12" style="padding-left:1300px;font-size:16px">
            
            @{
                if (u != null)
                {
                    <div class="col-sm-4 col-md-0">
                        Xin chào : @u.Email
                        &nbsp;
                        
                        <a style="color:red" href="/User/DangXuat"> ĐĂNG XUẤT</a>
                    </div>
                }
                else
                {
                    <div class="col-sm-4 col-md-0">
                        <a style="color:white" href="/User/Dangky"> Đăng ký</a>
                        &nbsp;
                        <a style="color: white" href="/User/Dangnhap"> Đăng nhập</a>
                    </div>
                }
            }

        </div>
        <div class="container">

            <div class="navbar-header">
  
                </button>
              
                    <img class="navbar-brand" src="~/HinhanhSP/max16.jpg" width="50" height="50" />
                    @Html.ActionLink("NATUSVINCENZO", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            
                
                <form class="form-inline" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                  
                </form>

            </div>
         
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav ">
                    </li>
                    <li>
                        <a href="/Home/Contact" title="LIENHE">
                            <span>LIÊN HỆ</span>

                        </a>
                    </li>
                    <li>
                        <a 
                           href="@Url.Action("Index", "DonHangs")">ĐƠN HÀNG</a>
                    </li>
                    <li>
                        <div style="padding-top:13px" >
                            @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                        </div>
                    </li>
                </ul>
            </div>

        </div>
        </div>


    <br>

    <div class="container body-content">
        @RenderBody()
            <center> <p class="bg-primary">&copy; @DateTime.Now.Year NATUSVINCENZO</p></center>
        </footer>
 


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
